# SSH
fw4 -A INPUT -i usb0 -p tcp --dport 2222 -j ACCEPT
fw4 -A OUTPUT -o usb0 -p tcp --sport 2222 -j ACCEPT

# DHCP
fw4 -A INPUT -i usb0 -p udp --sport bootpc --dport bootps -j ACCEPT
fw4 -A OUTPUT -o usb0 -p udp --sport bootps --dport bootpc -j ACCEPT

# Tor
ipset create tor hash:ip,port -exist
fw4 -A INPUT -i eth0 -p tcp -m set --match-set tor src,src -j ACCEPT
fw4 -A OUTPUT -o eth0 -p tcp -m set --match-set tor dst,dst -j ACCEPT

fw4 -A INPUT -i lo -p tcp --dport 9050 -j ACCEPT
fw4 -A INPUT -i lo -p tcp --sport 9050 -j ACCEPT
fw4 -A OUTPUT -o lo -p tcp --dport 9050 -j ACCEPT
fw4 -A OUTPUT -o lo -p tcp --sport 9050 -j ACCEPT
